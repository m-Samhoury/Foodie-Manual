<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="autoCompleteTextViewStyle">@style/MySearchViewStyle</item>
    </style>

    <style name="IconButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:padding">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="MySearchViewStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <!-- Background for the search query section (e.g. EditText) -->
        <item name="android:textColor">@color/black</item>
        <item name="iconTint">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:colorControlActivated">@color/black</item>
        <item name="android:colorControlHighlight">@color/black</item>
        <item name="android:textColorHint">@color/grey</item>
    </style>

</resources>
